<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvNumero"
        android:layout_width="156dp"
        android:layout_height="161dp"
        android:background="#000000"
        android:backgroundTint="#000000"
        android:backgroundTintMode="add"
        android:gravity="center"
        android:text="@string/numero"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#0091EA"
        android:textSize="85sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.22"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnMasUno"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="308dp"
        android:backgroundTint="#2962FF"
        android:onClick="SumarUno"
        android:text="@string/masuno"
        android:textColor="#000000"
        android:textSize="48sp"

        app:layout_constraintStart_toEndOf="@+id/tvNumero"
        tools:layout_editor_absoluteY="232dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/btnMenosUno"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginStart="308dp"
        android:layout_marginBottom="32dp"
        android:backgroundTint="#2962FF"
        android:onClick="RestarUno"
        android:text="@string/menosuno"
        android:textColor="#000000"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/btnMasUno"
        app:layout_constraintStart_toEndOf="@+id/tvNumero" />
</androidx.constraintlayout.widget.ConstraintLayout>